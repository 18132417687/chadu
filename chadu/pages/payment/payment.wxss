.addresscontent{
  width: 100%;
  margin-bottom: 126rpx;
}
/* 用户收货地址 */

.userAddress,.noaddress{
  width: 100%;
  background: #fff;
  padding: 0 2.5% 0 2.5%;
  box-sizing: border-box;
}
.noaddress{
  display: flex;
  height: 140rpx;
  flex-flow: row;
  align-items: center;
}
.noaddress text:nth-of-type(1){
 color: #333;
}
.noaddress text:nth-of-type(2){
 color: #e6240b;
 /* font-weight:bold;  */
}
.userInfo{
  width: 100%;
  /* height: 60rpx; */
  padding: 15rpx 0 15rpx 0;
  box-sizing: border-box;
  border-bottom: 1px solid #efefef;
}

.username {
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  align-items: center;
}

.username text, .address {
  color: #333;
}

.address {
  width: 100%;
  display: flex;
  flex-flow: row;
  align-items: center;
  justify-content: space-between;
}

/* 商品信息 */

.goodsInfo {
  width: 100%;
  margin-top: 30rpx;
  padding: 0 2.5% 0 2.5%;
  box-sizing: border-box;
  background: #fff;
  margin-bottom: 30rpx;
}

.goodsTitle {
  display: block;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #efefef;
}

.goods {
  width: 100%;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0 20rpx 0;
  box-sizing: border-box;
  border-bottom: 1px solid #efefef;
}

.img image {
  display: block;
  width: 180rpx;
  height: 180rpx;
}

.goosDetail {
  padding-left: 20rpx;
  box-sizing: border-box;
}

.goosDetail text:nth-of-type(1) {
  color: #333;
  display: block;
  font-size: 30rpx;
}

.goosDetail text:nth-of-type(2) {
  color: #666;
  display: block;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
}

.goodsPrice {
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  align-items: center;
}

.goodsPrice view:nth-of-type(1) {
  color: #666;
  font-size: 26rpx;
}

.goodsPrice view:nth-of-type(2) {
  color: #e6240b;
  font-size: 26rpx;
}

/* 优惠卷 */
/* 运费 */
.coupon, .freight {
  width: 100%;
  height: 80rpx;
  /* padding: 0 20rpx 0 20rpx;
  box-sizing: border-box; */
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #efefef;
  background: #fff;

}

.coupon text:nth-of-type(1), freight text:nth-of-type(1) {
  color: #333;
}

.coupon text:nth-of-type(2) {
  color: #666;
  font-size: 26rpx;
}

.freight text:nth-of-type(2) {
  color: #e6240b;
  font-size: 26rpx;
}

/* 底部提交 */

.bottom {
  width: 100%;
  height: 96rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  align-items: center;

  border-top:1px solid #efefef; 
}

.total {
  width: 60%;
  height: 96rpx;
  line-height: 96rpx;
  background: #fff;
  padding: 0 0 0 20rpx;
  box-sizing: border-box;
  color: #e6240b;
}

.submit {
  width: 40%;
  height: 96rpx;
  line-height: 96rpx;
  background: #fe4543;
  text-align: center;
  color: #fff;
}

/* 支付密码css start */

.bg_layer {
  position: fixed;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 9998;
  
}

.input_main {
  position: fixed;
  left: 0;
  bottom: 500rpx;
  width: 100%;
  height: 394rpx;
  background-color: #fff;
  z-index: 9999;
}

.input_title {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 32rpx;
  border-bottom: 1rpx solid #e2e2e2;
}

.input_back {
  position: absolute;
  left: 0;
  top: 0;
  width: 80rpx;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.input_back text {
  width: 20rpx;
  height: 20rpx;
  background-color: white;
  border: 1rpx solid #aaa;
  border-width: 5rpx 0 0 5rpx;
  transform: rotate(-45deg);
}

.input_tip {
  margin: 30rpx;
  font-size: 24rpx;
  color: #888;
}

/* 密码掩码模拟 */

.input_row {
  width: 690rpx;
  margin: 0 auto;
  height: 98rpx;
  position: relative;
  display: flex;
  align-items: center;
  border: 1rpx solid #e2e2e2;
  border-radius: 20rpx;
}

.input_row .pwd_item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  border-right: 1rpx solid #e2e2e2;
  position: relative;
}

.pwd_item:nth-last-of-type(1) {
  border-right: 0;
}

.pwd_item text {
  width: 30rpx;
  height: 30rpx;
  border-radius: 30rpx;
  background-color: #555;
}

.forget_pwd {
  float: right;
  margin: 30rpx;
  width: 100rpx;
  text-align: right;
  font-size: 24rpx;
  color: #ff7800;
}

/* 文本输入框位置: 设置到左边隐藏 */

.input_control {
  position: relative;
  left: -300rpx;
  bottom: 0;
  width: 100rpx;
  height: 100rpx;
}
