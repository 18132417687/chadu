/* pages/addaddress/addaddress.wxss */
@import "../../utils/weui.wxss";
.picker{
    padding: 13px;
    background-color: #FFFFFF;
}
page{
  background: #efefef;
}
/* 添加收货地址 */
.address,.picker{
  width: 100%;
  height: 100rpx;
  padding: 0 2.5% 0 2.5%;
  box-sizing: border-box;
  border-bottom: 1px solid #efefef;
  background: #ffffff;
  display: flex;
  flex-flow: row;
  align-items: center;
}
.address text{
  color: #999999;
}
.picker{
  color: #999999;
}
.city{
  color: #333333;
}
.address input{
  width: 80%;
}
/* 保存地址 */
.bottom{
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  position: fixed;left: 0;bottom: 0;
  background: #fe4543;
  color: #ffffff;
  text-align: center;
}
.detailaddress{
  width: 100%;
  padding: 0 2.5% 0 2.5%;
  box-sizing:  border-box;
  background: #ffffff;
}

button::after{
  border: none;
}





.infoText{
    margin-top: 20rpx;
    text-align: center;
    width: 100%;
    justify-content: center; 
}

picker-view{
  background-color: white;
  padding: 0;
  width: 100%; 
  height: 380rpx;
  bottom: 0;
  position: fixed;
}

picker-view-column view{
  vertical-align:middle; 
  font-size: 28rpx;
  line-height: 28rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* ----------------------------------------- */

.animation-element-wrapper {
  display: flex;  
  position: fixed;
  left: 0;
  top:0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 9999;
}
.animation-element {
  display: flex;
  position: fixed;
  width: 100%;
  height: 470rpx;
  bottom: 0;
  background-color: rgba(255, 255, 255, 1);
}

.animation-button {
  margin-top: 20rpx;
  top:20rpx;
  width: 400rpx;
  height: 100rpx; 
  line-height: 100rpx; 
  align-items:center;
}


