/* pages/my/my.wxss */

/* 点击登录 */

page {
  background: #efefef;
}

.login {
  width: 100%;
}

.bgImg {
  display: block;
  width: 100%;
  height: 300rpx;
}

.center {
  width: 90%;
  margin: 0 auto;
  background: #fff;
  position: absolute;
  top: 80rpx;
  left: 5%;
  display: flex;
  flex-flow: row;
  align-items: center;
  justify-content: space-between;
  border-radius: 15rpx;
}

.peopleCenter {
  /* width: 90%; */
  display: flex;
  flex-flow: row;
  align-items: center;
  padding: 70rpx 0 70rpx 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.loginImg {
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
  overflow: hidden;
}

.clickLogin {
  color: #333;
  font-size: 30rpx;
  background: #fff;
  margin-left: 10px;
}

