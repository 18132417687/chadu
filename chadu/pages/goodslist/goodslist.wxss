/* 屏幕背景变暗的背景 */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*--弹出框 */
.layout{
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
  box-sizing: border-box;
}
.layoutGoods{
  width: 100%;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 2.5% 20rpx 2.5%;
  box-sizing: border-box;
  border-bottom: 1px solid #efefef;
}
.layoutDetail{
  width: 93%;
  display: flex;
  flex-flow: row;
  align-items: center;
}
.layoutDetail image{
  display: block;
  width: 200rpx;
  height: 200rpx;
}
.layoutPrice{
  width: 70%;
  padding-left: 2.5%;
  box-sizing: border-box;
}
.layoutPrice text{
  width: 100%;
  display: block;
}
.layoutPrice text:nth-of-type(1){
  color: #e6240b;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
}
.layoutPrice text:nth-of-type(2){
  color: #333333;
  font-size: 26rpx;
  /* height: 50rpx; */
  /* line-height: 50rpx; */
}
.closeLayout icon{
  font-size: 48rpx;
  color: #999999;
}
.layoutSpecific{
  width: 100%;
  padding: 30rpx 2.5% 20rpx 2.5%;
  box-sizing: border-box;
  border: 1px solid #efefef;
}
.layoutSpecific text{
  display: block;
}
.layoutSpecific text:nth-of-type(1){
  color: #333333;
  font-size: 28rpx;
}
.layoutSpecific text:nth-of-type(2){
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #ffffff;
  font-size: 26rpx;
  border-radius: 10rpx;
  background: #fe4543;
  text-align: center;
  margin: 30rpx 0 30rpx 0 ;
}
.layoutnum{
  width: 100%;
  padding: 80rpx 2.5% 80rpx 2.5%;
  box-sizing: border-box;
  border: 1px solid #efefef;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  align-items: center;
}
.layoutnum text{
