/* pages/goodslist/goodslist.wxss */
page{
  background: #efefef;
}
/* <!-- 搜索框 --> */
.searchOut{
  background-color: #ffffff;
}
.search{
  width: 92%;
  margin: 0 auto;
  height: 80rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  align-items: center;
}
.search icon{
  display: flex;
  flex-flow: row;
  align-items: center;
  position: absolute;left: 32rpx;
  padding-left: 5rpx;
  box-sizing: border-box;
  color: #b7bbbb;
  font-size: 36rpx;
}
.search input{
  width:80%;
  height: 60rpx;
  border-radius: 10rpx;
  background: #efeeee;
  padding-left:44rpx;
  box-sizing: border-box; 
}
.search button{
  width: 18%;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #a4a5a5;
  border: 1px solid #a4a5a5;
}
/* 为您优选 */
.firstSelecttitle{
  margin-top: 20rpx;
}
.firstSelectzong{
  width: 100%;
  background: #efefef;
  padding-bottom: 20rpx;
  box-sizing: border-box;
}
.firstSelect{
  width: 95%;
  margin: 0 auto;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  align-items: center;
}
.firstSelectLeft{
  width: 49%;
  background: #ffffff;
  margin-top: 15rpx;
}
.goodsimg{
  width: 100%;
  height: 260rpx;
  padding: 5% 5% 0% 5%;
  box-sizing: border-box;
}
.goodstitle{
  display: block;
  width: 100%;
  color: #333333;
  font-size:28rpx; 
  padding: 0 5% 0 5%;
  box-sizing: border-box;
  /* //截取字符串 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:1;
  -webkit-box-orient: vertical;
}
.firstSelectPrice{
  width: 100%;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  align-items: center;
}
.firstSelectPrice text{
  width: 100%;
  color: #d81e06;
  font-size: 30rpx;
  font-weight: bold;
  padding-left: 2.5%;
  box-sizing: border-box;
}
.firstSelectPrice icon{
  color: #d81e06;
  font-size: 42rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
}
