/* pages/member/member.wxss */
page{
  background: #efefef;
}
/* 会员积分 */
.member{
  width: 100%;
  margin-bottom: 60rpx;
}
.member image{
  display: block;
  width: 100%;
  height: 300rpx;
}
.center{
  width: 90%;
  margin: 0 auto;
  background: #ffffff;
  position: absolute;top: 80rpx;left:5%;
  border-radius:15rpx;
  padding: 71rpx 0 71rpx 0;
  box-sizing: border-box; 
}
.memberId{
  width: 100%;
  display: flex;
  flex-flow: row;
  align-items: center;
  height: 50rpx;
  padding-left: 25rpx;
  box-sizing: border-box;
}
.memberId text:nth-of-type(1){
  width: 60%;
  display: block;
  color: #666666;
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.memberId text:nth-of-type(2){
  width: 40%;
  display: block;
  color: #999999;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
}
.memberGrade{
  width: 100%;
  display: flex;
  padding-left: 25rpx;
  box-sizing: border-box;
}
.memberTitle{
  color: #e3dfdf;
  font-size: 30rpx;
}
.grade{
  display: flex;
  flex-flow: row;
  align-items: center;
  color: #ea5c06;
  position: absolute;right: 5%;
}
.grade view{
  font-size: 40rpx;
  font-weight: bold;
}
.grade icon{
  font-size: 36rpx;
}
/* 会员卡 */
.memberCard{
  width: 90%;
  margin: 0 auto;
  height: 80rpx;
  display: flex;
  flex-flow: row;
  align-items: center;
  background: #4a3e30;
  border-radius: 50rpx;
  margin-top: 40rpx;
}
.cardLeft{
  width: 75%;
  height: 80rpx;
  display: flex;
  flex-flow: row;
  align-items: center;
}
.cardLeft image{
  display: block;
  width: 100%;
  height: 80rpx;
  /* width: 64rpx; */
  /* height: 80rpx; */
}
.limit{
  color: #f5f5f5;
  background: #f23464;
  transform: rotate(-45deg);
  font-size: 20rpx;
  border-radius: 5rpx;
  padding: 0 2rpx 0 2rpx;
  box-sizing: border-box;
  margin-left: 8rpx;
}
.cardLeft text{
  display: block;
  
}
.cardLeft text:nth-of-type(2),.cardLeft text:nth-of-type(4){
  color: #ffffff;
  font-size: 26rpx;
}
.cardLeft text:nth-of-type(3){
  font-size: 32rpx;
  color: #e0c2a0;
  padding:0 5rpx 0 5rpx;
  box-sizing: border-box;
}
.cardLeft text:nth-of-type(5){
  color: #e0c2a0;
  font-size: 26rpx;
}
.cardLeft text:nth-of-type(5){
  padding-left:15rpx;
  box-sizing: border-box;
  text-decoration: line-through; 
}
.cardRight{
  color: #ffffff;
}
.btn_pay{
  margin: 100rpx auto; width: 600rpx; height: 100rpx; line-height: 100rpx; border-radius: 100rpx;
  background-color: #d3a95a; color: #fff; font-size: 36rpx; text-align: center; 
}
