<!--pages/editaddress/editaddress.wxml-->
<!-- 修改收货地址 -->
<form bindsubmit="save">
  <view class="address">
    <text>收货人:</text>
    <input type="text" name="people" placeholder="{{addressList.people}}"></input>
  </view>
  <view class="address">
    <text>手机号码:</text>
    <input type="text" name="phone" placeholder="{{addressList.phone}}"></input>
  </view>
  <view class="address">
    <text>所在地址:</text>
    <input type="text" name="address" placeholder="{{addressList.address}}"></input>
  </view>
  <view class="detailaddress">
    <textarea placeholder="详细地址：如街道、门牌号、小区、楼栋号、单元室等" name="detailaddress" placeholder="{{addressList.detailaddress}}"></textarea>
    <!-- <!-- <input type="text" bindfocus bindconfirm bindtap="keyboard"></input> -->
  </view>
  <!-- 保存地址 -->
  <button class="bottom" form-type='submit'>保存地址</button>
</form>
